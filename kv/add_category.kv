<AddCategoryScreen>:
    name: Const.ADD_CATEGORY
    id: add_category

    GridLayout:
        cols: 2
        rows: 10
        padding:[10,10,10,10]
        spacing:[10,10]

        MyTextInput:
            id: input_cat1
            hint_text: Text.data['category1']
            size_hint:(0.7,1)

        MyButton:
            text: Text.data['add']
            elevation_normal: 2
            opposite_colors: True
            pos_hint: {"center_x": .5}
            size_hint:(0.3,1)
            on_press:
                app.main.category.create_category(1, 1,input_cat1.text)
                input_cat1.text = ''


        MyMainDropButton:
            id: drop_cat1
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint:(0.7,1)
            on_press:
                app.main.category.refresh_category(1, 1, Const.GET_MENU)
                app.main.screen_controller.cat_menu(1)


        GridLayout:
            cols: 2
            size_hint:(0.3,1)
            spacing: 2
            MyButton:
                text: Text.data['edit']
                elevation_normal: 2
                opposite_colors: True
                pos_hint: {"center_x": .5}
                on_press:
                    app.main.category.show_widget(1, add_category)


            MyButton:
                text: Text.data['del']
                elevation_normal: 2
                opposite_colors: True
                pos_hint: {"center_x": .5}
                on_press:
                    drop_cat1.text = '---'
                    app.main.category.remove_category(1, 2, drop_cat1, Const.GET_SUBMENU)
                    app.main.category.refresh_category(1, 1, Const.GET_MENU)

        MyTextInput:
            id: input_cat2
            hint_text: Text.data['category2']
            size_hint:(0.7,1)

