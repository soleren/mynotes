            pos_hint: {"center_x": .5}
            size_hint:(0.3,1)
            on_press:
                app.main.category.create_category(2, app.main.category.check_drop_cat(drop_cat1), input_cat2.text) if app.main.category.check_drop_cat(drop_cat1) else None
                input_cat2.text = ''

        MyMainDropButton:
